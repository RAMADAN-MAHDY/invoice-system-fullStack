<%- include('partials/header') %>
<div class="container mx-auto p-4 flex items-center justify-center" style="min-height: calc(100vh - 8rem);">
    <div class="glass p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-3xl font-bold mb-6 text-center text-white">✏️ تعديل فاتورة بيع</h2>
        <form method="POST" action="/sales/edit/<%= sale._id %>" class="space-y-6">
            <div>
                <label class="block mb-2 font-semibold text-gray-300">المنتج</label>
                <input type="text" name="itemName" value="<%= sale.itemName %>" class="w-full bg-gray-700 border border-gray-600 px-3 py-2 rounded-lg" readonly>
            </div>
            <div>
                <label class="block mb-2 font-semibold text-gray-300">الكمية</label>
                <input type="number" name="quantity" value="<%= sale.quantity %>" class="w-full bg-gray-800 border border-gray-700 px-3 py-2 rounded-lg" required>
            </div>
            <div>
                <label class="block mb-2 font-semibold text-gray-300">السعر</label>
                <input type="number" name="price" value="<%= sale.price %>" class="w-full bg-gray-800 border border-gray-700 px-3 py-2 rounded-lg" required>
            </div>
            <div>
                <label class="block mb-2 font-semibold text-gray-300">اسم البائع</label>
                <input type="text" name="sellerName" value="<%= sale.sellerName %>" class="w-full bg-gray-800 border border-gray-700 px-3 py-2 rounded-lg" required>
            </div>
            <div class="flex items-center gap-4 pt-4">
                <button type="submit" class="w-full bg-blue-600 text-white font-bold px-4 py-2 rounded-lg hover:bg-blue-700 transition">حفظ التعديل</button>
                <a href="/sales" class="w-full text-center bg-gray-600 text-white font-bold px-4 py-2 rounded-lg hover:bg-gray-700 transition">إلغاء</a>
            </div>
        </form>
    </div>
</div>
<%- include('partials/footer') %>