<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-[calc(100vh-128px)]">
  <div class="w-full max-w-sm p-8 space-y-6 glass rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-white">إنشاء حساب جديد</h2>

    <% if (error) { %>
      <div class="p-4 text-sm text-red-400 bg-red-900/50 rounded-lg text-center"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="p-4 text-sm text-green-400 bg-green-900/50 rounded-lg text-center"><%= success %></div>
    <% } %>

    <form method="POST" action="/register" class="space-y-6">
      <div>
        <label class="block mb-2 text-sm font-semibold text-gray-300">اسم المستخدم</label>
        <input type="text" name="username" class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-right" placeholder="أدخل اسم المستخدم" required>
      </div>

      <div>
        <label class="block mb-2 text-sm font-semibold text-gray-300">كلمة المرور</label>
        <input type="password" name="password" class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-right" placeholder="أدخل كلمة المرور" required>
      </div>

      <div>
        <label class="block mb-2 text-sm font-semibold text-gray-300">تأكيد كلمة المرور</label>
        <input type="password" name="confirmPassword" class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-right" placeholder="أعد كتابة كلمة المرور" required>
      </div>

      <button type="submit" class="w-full bg-green-600 text-white font-bold py-2 rounded-lg hover:bg-green-700 transition-colors">
        إنشاء الحساب
      </button>
    </form>

    <p class="text-center text-sm text-gray-400">
      لديك حساب بالفعل؟
      <a href="/login" class="font-semibold text-blue-400 hover:text-blue-300">تسجيل الدخول</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
